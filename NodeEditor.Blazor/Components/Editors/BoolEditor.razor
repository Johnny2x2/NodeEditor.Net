<label class="ne-editor-bool" @onpointerdown:stopPropagation @onclick:stopPropagation>
    <input class="ne-editor-checkbox"
           type="checkbox"
           checked="@CurrentValue"
           @onchange="OnChange" />
    <span>True/False</span>
</label>

@code {
    [Parameter, EditorRequired]
    public SocketEditorContext Context { get; set; } = null!;

    private bool CurrentValue => Context.GetValue<bool>() ?? false;

    private void OnChange(ChangeEventArgs e)
    {
        if (e.Value is bool isChecked)
        {
            Context.SetValueTyped(isChecked);
        }
        else
        {
            Context.SetValueTyped(!CurrentValue);
        }
    }
}
